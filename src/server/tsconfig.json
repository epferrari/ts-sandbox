{
	"version": "2.7.2",
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"allowJs": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"noLib": false
	},
	"plugins": [
		{
			"name": "tslint-language-service",
			"ignoreDefinitionFiles": true
		}
	],
	"compileOnSave": false,
	"include": [
		"./**/*",
		"../common/**/*"
	]
}
